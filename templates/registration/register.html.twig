{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 border p-4">
                <h1 class="mb-4 text-center">Register</h1>


                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-dismissible fade show {% if type == 'success' %}alert-success{% elseif type == 'error' %}alert-danger{% endif %}" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <div class="text-center">
                    <img src="{{ asset('img/logoV1.jpg') }}" alt="Logo" class="img-fluid mb-4" style="max-height: 100px;">
                </div>

                {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    {{ form_errors(registrationForm.nom) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
                    {{ form_errors(registrationForm.prenom) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.numero, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.numero, {'attr': {'class': 'form-control', 'placeholder': 'Numero'}}) }}
                    {{ form_errors(registrationForm.numero) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.adresse, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                    {{ form_errors(registrationForm.adresse) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.ville, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                    {{ form_errors(registrationForm.ville) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.profession, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.profession, {'attr': {'class': 'form-control', 'placeholder': 'Profession'}}) }}
                    {{ form_errors(registrationForm.profession) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.quartier, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.quartier, {'attr': {'class': 'form-control', 'placeholder': 'Quartier'}}) }}
                    {{ form_errors(registrationForm.quartier) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.pays, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registrationForm.pays, {'attr': {'class': 'form-control', 'placeholder': 'Pays'}}) }}
                    {{ form_errors(registrationForm.pays) }}
                </div>

                <div class="form-group form-check mb-3">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <button type="submit" class="btn btn-primary btn-block">Envoyer</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
